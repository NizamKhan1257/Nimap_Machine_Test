@model ShopDTOs.ProductDTO
@{
}
<hr/>
<h1>Add Product</h1>
<div class="col-md-4">
    <form asp-action="ProductAdd" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-md-8">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label col-md-2"></label>
            <div class="col-md-8">
                <select asp-for="CategoryId" asp-items="ViewBag.Data" class="form-control">
                    <option value="">--Select Category--</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
           
             <a asp-action="ProductIndex" asp-controller="Shop" class="btn btn-success">Back to List</a>
           
        </div>
    </form>
</div>